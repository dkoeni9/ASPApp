@{
	ViewData["Title"] = "Регистрация";
}

<div class="text-center d-flex flex-column justify-content-center align-items-center vh-100">
	<h1 class="display-1">Регистрация</h1>
	<form method="post" asp-action="Register" asp-controller="Register">
		<div class="form-group">
			<div class="my-4">
				<label class="control-label">Логин</label>
				<input asp-for="Login" class="form-control" name="Login" />
				<label class="control-label">ФИО</label>
				<input asp-for="FullName" class="form-control" name="FullName" />
				<label class="control-label">Пароль</label>
				<input asp-for="Password" class="form-control" type="password" name="Password" />
			</div>

			<button class="btn btn-primary" role="button" type="submit">Зарегистрироваться</button>
			@ViewData["Message"]
				
		</div>
	</form>
</div>